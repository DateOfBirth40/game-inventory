extends layout 

block content 
  h1=title 

  form(method='POST' action='')
    div.form-group
      label(for='title') Company Title: 
      input#title.form-control(type='text' placeholder='Title' name='title' required='true' value=(undefined===developer ? '' : developer.title))
      label(for='summary') Summary: 
      textarea#summary.form-control(type='textarea' placeholder='Enter a brief summary for the development company' name='summary' required='true' value=(undefined===developer ? '' : developer.summary))
    div.form-group
      label(for='locationCity') City: 
      input#locationCity.form-control(type='text' placeholder='City' name='locationCity' required='true' value=(undefined===developer ? '' : developer.locationCity))
      label(for='locationCountry') Country: 
      input#locationCountry.form-control(type='text' placeholder='Country' name='locationCountry' required='true' value=(undefined===developer ? '' : developer.locationCountry))
      label(for='founded') Year Founded: 
      input#founded.form-control(type='text' placeholder='Year' name='founded' required='true' value=(undefined===developer ? '' : developer.founded))
    button.btn.btn-primary(type='submit') Submit 
  if errors 
    ul 
      for error in errors 
        li!= error.msg